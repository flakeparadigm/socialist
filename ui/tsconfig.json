{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
